<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html lang="ja-JP">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=<%= page_charset() %>">
  <meta http-equiv="Content-Language" content="ja-JP">
  <meta name="robots" content="noindex,nofollow">
  <link rel="stylesheet" type="text/css" href="<%= css_url() %>">
  <title>Recent Edit</title>
</head>
<body>
<%
  def format_origin_time(t)
    time = t - 60 * 3
    sprintf('%04d%02d%02d%02d%02d%02d',
            time.year, time.month, time.mday,
            time.hour, time.min - 3, time.sec)
  end
%>

.include menu

<div class="main">
<h1><%= logo_url() %>Recent Edit</h1>
<p><a href="<%= cgi_url() %>?cmd=gdiff;org=cookie">[Diff from my last visit]</a></p>
<ol>
<%  page_list().each do |page, mtime|  %>
<li><a href="<%= cgi_url() %>?cmd=gdiff;org=<%= format_origin_time(mtime) %>"><%= format_time(mtime) %></a>: <a href="<%= view_url(page) %>"><%= escape_html(page) %></a></li>
<%  end  %>
</ol>
</div>

</body>
</html>
